+++ Makefile	2004-09-01 18:41:01.000000000 +0200
@@ -46,7 +46,11 @@
 all: build-tests run-tests 
 
 build-tests: $(BUILD_TESTS:.c=.test)
-run-tests: $(RUN_TESTS:.test=.run-test)
+run-tests:
+	-chmod 755 timeout
+	for i in $(RUN_TESTS); do \
+		./timeout $$i; \
+	done
 
