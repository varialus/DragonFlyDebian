#!/bin/sh
set -e

args=""
while [ $# -gt 0 ]; do
  case "$1" in
    -n) ;;
    *)  if [ -n "${args}" ] ; then args="${args} $1" ; else args="$1" ; fi ;;
  esac
  shift
done

args=`echo ${args} | sed -e "s/ remount,/ /g" -e "s/,remount,/,/g" \
 -e "s/,remount / /g" -e "s/-o remount / /g"`

exec -a mount /lib/freebsd/mount ${args}
