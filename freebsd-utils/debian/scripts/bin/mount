#!/bin/sh
set -e

args=""
while [ $# -gt 0 ]; do
  case "$1" in
    -n) ;;
    -O) shift ;;
    *)  if [ -n "${args}" ] ; then args="${args} $1" ; else args="$1" ; fi ;;
  esac
  shift
done

args=`echo ${args} |
  sed -r -e "/-o[[:space:]]+[^[:space:]]*remount/ s/remount/update/g"`

exec /lib/freebsd/mount ${args}
