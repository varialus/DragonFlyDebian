src/sys/conf/kern.mk: s/-mno-align-long-strings//; \
	s/-fformat-extensions//
src/sys/conf/kern.post.mk: s/wheel/root/g; \
	next if /chflags/
src/sys/conf/kmod.mk: s/-J/-i/ if /xargs/
src/sys/boot/i386/boot2/Makefile: s/osync/sync/ if /dd/; \
	s/-mno-align-long-strings//
src/sys/boot/i386/pxeldr/Makefile: s/osync/sync/ if /dd/
# liloldr is removed in 5.1
# src/sys/boot/i386/liloldr/Makefile: s/osync/sync/ if /dd/
src/sys/boot/i386/loader/Makefile: s/Ttext 0x0/Ttext=0x0/ if /Ttext/
