#!/usr/bin/make -f

version := 4.6

DEB_TAR_SRCDIR = kfreebsd-headers-$(version)

build/kfreebsd-headers:: pre-build
	cp -a debian/patches $(DEB_SRCDIR)/
	cd $(DEB_SRCDIR) && patches/patchit

binary/kfreebsd-headers:: common-install-prehook-arch
	mkdir -p debian/kfreebsd-headers/usr/src/kfreebsd-headers
	cp -a $(DEB_SRCDIR)/import/* \
		debian/kfreebsd-headers/usr/src/kfreebsd-headers/

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/tarball.mk
